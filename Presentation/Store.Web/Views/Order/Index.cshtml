@model OrderModel
@{
    ViewData["Title"] = "Корзина";
}

<h1>Корзина</h1>
<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Автор</th>
            <th scope="col">Название</th>
            <th scope="col">Количество</th>
            <th scope="col">Цена</th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Items.Length; i++)
    {
        <tr>
            <th class="text-right">@(i + 1)</th>
            <th>@Model.Items[i].Author</th>
            <th>@Model.Items[i].Title</th>
            <th class="text-right">@Model.Items[i].Count</th>
            <th class="text-right">@Model.Items[i].Price</th>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3" class="text-right">Итого</td>
        <td class="text-right">@Model.TotalCount</td>
        <td class="text-right">@Model.TotalPrice</td>
    </tr>
    </tfoot>
</table>